#!/usr/bin/python2
# -*- coding: utf-8 -*-
import sys
from dorar import Dorar
import re

if __name__ == "__main__":
     args = sys.argv
     if len(args) == 2:
         if re.match("[ا-ي]+", args[1]):
             hasil = Dorar()
             print hasil.searchHadith(args[1])

         else:
             print "Invalid Keys"
     elif len(args) > 2:
         kata = "+".join(args[1:])
         if re.match("[أ-ي]+", kata):
             hasil = Dorar()
             print hasil.searchHadith(args[1])
         else:
             print "Invalid Keys"
     else:
         print "Pencarian derajat hadith"
         print "Usage : dorar <hadith>"
         print "Ex : dorar أنا خاتم النبيين"
